        <Button Content="Projektbeteiligte wählen" HorizontalAlignment="Left" Margin="485,134,0,0" VerticalAlignment="Top" Width="147"/>
        <ListBox HorizontalAlignment="Left" Height="90" Margin="427,159,0,0" VerticalAlignment="Top" Width="205">
            <ListBoxItem Content="Max Mutermann"/>
        </ListBox>
        <TextBox HorizontalAlignment="Left" Height="90" Margin="427,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
        <TextBox HorizontalAlignment="Left" Height="90" Margin="427,349,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
